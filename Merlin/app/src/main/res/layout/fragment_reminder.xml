<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.gmariotti.cardslib.library.view.CardListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/carddemo_list_padding"
        android:paddingRight="@dimen/carddemo_list_padding"
        style="@style/native_list_external"
        card:list_card_layout_resourceID="@layout/reminder_card_list_layout"
        android:id="@+id/reminder_list_base"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_reminder_fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_white_24dp"
        fab:fab_colorNormal="@color/pink_400"
        fab:fab_colorPressed="@color/pink_500"
        fab:fab_colorRipple="@color/pink_100" />
</FrameLayout>