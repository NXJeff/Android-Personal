<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:id="@+id/widget50"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#F0F0F0"
	xmlns:android="http://schemas.android.com/apk/res/android"
>


<TextView
	android:id="@+id/main_title"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Sensors Remote Control"
	android:textColor="#FFFFFF"
	android:gravity="center"
	android:textSize="22sp"
	android:paddingLeft="2px"
	android:paddingRight="2px"
	android:paddingTop="2px"
	android:paddingBottom="2px"
	android:background="@drawable/title_bg"

>
</TextView>
<TextView
android:id="@+id/main_subTitle"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Connect to a Server"
android:background="@drawable/subtitle_bg"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="5px"
android:paddingBottom="5px"
>
</TextView>
<TextView
android:id="@+id/main_error"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/subtitle_bg"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="5px"
android:paddingBottom="5px"
></TextView>
<LinearLayout
android:id="@+id/widget11"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="@drawable/list_bg"
android:orientation="vertical"
>
<LinearLayout
android:id="@+id/widget53"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"

>
<TextView
android:id="@+id/widget55"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Server IP : "
android:textSize="20sp"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="2px"
android:paddingBottom="2px"
>
</TextView>
<EditText
android:id="@+id/input_ip_add"
android:layout_height="wrap_content"
android:hint="[Enter IP address]"
android:textSize="16sp"
android:layout_width="0dp" 
 android:layout_weight="1"
android:maxLines="1"
>
</EditText>

</LinearLayout>
<LinearLayout
android:id="@+id/widget53"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"

>
<TextView
android:id="@+id/widget55"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Name\t\t: "
android:textSize="20sp"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="2px"
android:paddingBottom="2px"
>
</TextView>
<EditText
android:id="@+id/input_com_name"
android:layout_height="wrap_content"
android:hint="[Enter Computer Name]"
android:textSize="16sp"
android:layout_width="0dp" 
 android:layout_weight="1"
android:maxLines="1"
>
</EditText>
</LinearLayout>
<LinearLayout
android:id="@+id/widget53"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"

>
<TextView
android:id="@+id/input_port_label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Port\t\t\t\t: "
android:textSize="20sp"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="2px"
android:paddingBottom="2px"
>
</TextView>
<EditText
android:id="@+id/input_port"
android:layout_height="wrap_content"
android:inputType="number"
android:hint="[Blank = 55979]"
android:textSize="16sp"
android:layout_width="0dp" 
 android:layout_weight="1"
android:maxLines="1"
>
</EditText>
</LinearLayout>
<LinearLayout
android:id="@+id/widget58"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center"
>
<Button
android:id="@+id/btnConnect"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/connect_button"
android:paddingLeft="10px"
android:paddingRight="10px"
android:layout_marginRight="5px"
android:layout_marginBottom="5px"
>
</Button>
<Button
android:id="@+id/btnScan"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:background="@drawable/scan_button"
android:paddingLeft="10px"
android:paddingRight="10px"
android:layout_marginLeft="5px"
android:layout_marginBottom="5px"
>
</Button>
</LinearLayout>
</LinearLayout>
<TextView
android:id="@+id/main_subTitle2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Recently Connected Device(s)"
android:background="@drawable/subtitle_bg"
android:paddingLeft="5px"
android:paddingRight="5px"
android:paddingTop="5px"
android:paddingBottom="5px"
>
</TextView>

<ListView
android:id="@+id/recent_list"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
</ListView>

</LinearLayout>

