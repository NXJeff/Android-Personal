<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <RelativeLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
>
	<Button
	android:id="@+id/a_keyboard"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="40dp" 
	android:paddingRight="40dp"
	android:background="@drawable/keyboard_button"
	android:layout_marginLeft="5px"
	android:layout_marginTop="5px"
	android:layout_marginBottom="5px"	
	/>
	</RelativeLayout>
	
	<RelativeLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
>
	<Button
	android:id="@+id/k_up"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="40dp" 
	android:paddingRight="40dp"
	android:background="@drawable/up_button"
	android:layout_marginLeft="5px"
	android:layout_marginTop="5px"
	android:layout_marginBottom="5px"
	
	/>
	</RelativeLayout>
	
	<RelativeLayout android:orientation="horizontal"
    android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
>
	<Button
	android:id="@+id/k_left"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingLeft="25dp" 
	android:paddingRight="25dp"
	android:background="@drawable/left_button"
	android:layout_marginLeft="5px"
	android:layout_marginTop="5px"
	android:layout_marginBottom="5px"
	/>
	
	<Button
	android:id="@+id/k_down"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_toRightOf="@id/k_left"
	android:paddingLeft="20dp" 
	android:paddingRight="20dp"
	android:background="@drawable/down_button"
	android:layout_marginLeft="5px"
	android:layout_marginTop="5px"
	android:layout_marginBottom="5px"
	/>
	
	<Button
	android:id="@+id/k_right"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_toRightOf="@id/k_down"
	android:paddingLeft="20dp" 
	android:paddingRight="20dp"
	android:background="@drawable/right_button"
	android:layout_marginLeft="5px"
	android:layout_marginTop="5px"
	android:layout_marginBottom="5px"
	/>
	</RelativeLayout>
	
	
  <EditText android:id="@+id/etAdvancedText"
                android:layout_marginTop="1000dp"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true" android:maxHeight="32dp"
                android:inputType="textMultiLine"
                android:visibility="visible"
                />
  </LinearLayout>
  